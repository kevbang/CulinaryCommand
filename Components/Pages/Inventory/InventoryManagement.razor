        Console.WriteLine($"Ordering {item.Name}");
    }

    private async Task DeleteItem(InventoryItemDTO item)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete {item.Name}?"))
        {
            inventoryItems.Remove(item);
            FilterItems();
        }
    }
