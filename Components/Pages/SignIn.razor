@page "/signin"

<PageTitle>Sign In</PageTitle>

<div class="sign-in-container">
    <div class="sign-in-card">
        <div class="text-center mb-4">
            <h1 class="app-title">Culinary Command</h1>
            <p class="subtitle">Sign In to Your Account</p>
        </div>
    </div>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <EditForm Model="@signInModel" OnValidSubmit="@HandleSubmit">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <InputText id="username" class="form-control" @bind-Value="signInModel.username" />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <InputText type="password" id="password" class="form-control" @bind-Value="signInModel.password" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {


    private SignInModel signInModel = new();

    private void HandleSubmit() {
        Console.WriteLine($"Username: {signInModel.username}");
        Console.WriteLine($"Username: {signInModel.password}");
    }    

    private class SignInModel {
        public string username {get; set;} = string.Empty;
        public string password {get; set;} = string.Empty;
    }
}