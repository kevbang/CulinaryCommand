@using CulinaryCommand.Data.Entities
@using CulinaryCommand.Components.Pages.UserSettings.LocationSettings
@inherits ComponentBase

<div class="location-admin-view">

    <h4 class="mb-3">Company Locations</h4>

    <button class="btn btn-success mb-3" @onclick="NewLocation">
        <i class="bi bi-plus-square me-1"></i>Add Location
    </button>

    @foreach (var loc in Locations)
    {
        <div class="card shadow-sm p-3 mb-3">
            <div class="d-flex justify-content-between">
                <div>
                    <h5>@loc.Name</h5>
                    <p class="text-muted mb-1">@loc.Address</p>
                    <small>@loc.City, @loc.State @loc.ZipCode</small>
                </div>

                <div>
                    <button class="btn btn-outline-primary btn-sm me-2" 
                            @onclick="() => EditLocation(loc)">
                        Edit
                    </button>

                    <button class="btn btn-outline-danger btn-sm"
                            @onclick="() => OnDelete.InvokeAsync(loc.Id)">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    }

    <LocationFormModel   
        Show="showModal"
        Model="modalModel"
        Title= "@modalTitle"
        OnSave="SaveLocation"
        OnClose="CloseModal" />

</div>

@code {
    [Parameter] public List<Location> Locations { get; set; } = new();
    [Parameter] public EventCallback<Location> OnCreate { get; set; }
    [Parameter] public EventCallback<Location> OnEdit { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private bool showModal = false;
    private string modalTitle = "";
    private Location modalModel = new();

    private void NewLocation()
    {
        modalTitle = "Add Location";
        modalModel = new();
        showModal = true;
    }

    private void EditLocation(Location loc)
    {
        modalTitle = "Edit Location";
        modalModel = new Location
        {
            Id = loc.Id,
            Name = loc.Name,
            Address = loc.Address,
            City = loc.City,
            State = loc.State,
            ZipCode = loc.ZipCode,
            CompanyId = loc.CompanyId
        };
        showModal = true;
    }

    private async Task SaveLocation(Location model)
    {
        if (model.Id == 0)
            await OnCreate.InvokeAsync(model);
        else
            await OnEdit.InvokeAsync(model);

        showModal = false;
    }

    private void CloseModal()
    {
        showModal = false;
    }
}