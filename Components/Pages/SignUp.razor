@page "/signup"

<PageTitle>Sign Up</PageTitle>

<h1>Sign Up</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <EditForm Model="@signUpModel" OnValidSubmit="@HandleSubmit">
                    <div class="mb-3">
                        <label for="username" class="form-label">Username</label>
                        <InputText id="username" class="form-control" @bind-Value="signUpModel.username" />
                    </div>

                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <InputText type="password" id="password" class="form-control" @bind-Value="signUpModel.password" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign Up</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {


    private SignUpModel signUpModel = new();

    private void HandleSubmit() {
        Console.WriteLine($"Username: {signUpModel.username}");
        Console.WriteLine($"Username: {signUpModel.password}");
    }    

    private class SignUpModel {
        public string username {get; set;} = string.Empty;
        public string password {get; set;} = string.Empty;
    }
}