@page "/"
@inject NavigationManager Nav
@inject AuthService Auth

@code {
    protected override void OnInitialized()
    {
        // Redirect unauthenticated users to SignIn
        if (!Auth.IsSignedIn)
        {
            Nav.NavigateTo("/signin");
        }
        else
        {
            Nav.NavigateTo("/dashboard");
        }
    }
}
