@page "/edit-restaurants"
@using CulinaryCommand.Services
@rendermode InteractiveServer
 
@inject ILogger<EditRestaurants> Logger

<h3 class="my-4">
    <i class="bi bi-pencil-square me-2"></i>
    Edit Restaurants
</h3>

<div class="card shadow-sm">
    <div class="card-body">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">Your Restaurants</h5>
            <button class="btn btn-success btn-sm" @onclick="AddRestaurant">
                <i class="bi bi-plus-lg me-1"></i> Add Restaurant
            </button>
        </div>

        @if (restaurants.Count == 0)
        {
            <div >No restaurants added yet.</div>
        }
        else
        {
            <ul class="list-group">
                @foreach (var restaurant in restaurants)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @if (editRestaurant == restaurant)
                        {
                            <input @bind="editName" class="form-control form-control-sm me-2" style="max-width: 300px;" />
                            <div>
                                <button class="btn btn-sm btn-success me-2" @onclick="SaveEdit">
                                    <i class="bi bi-check-lg"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="CancelEdit">
                                    <i class="bi bi-x-lg"></i>
                                </button>
                            </div>
                        }
                        else
                        {
                            <div>@restaurant</div>
                            <div>
                                <button class="btn btn-sm btn-outline-primary me-2" @onclick="@(() => StartEdit(restaurant))">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteRestaurant(restaurant))">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        }
                    </li>
                }
            </ul>
        }
    </div>
</div>

<style>
.card {
    border-radius: 0.5rem;
}
.list-group-item {
    transition: background-color 0.15s ease-in-out;
}
.list-group-item:hover {
    background-color: #f6f6f6;
}
</style>

@code {
    protected override void OnInitialized()
    {
        Logger.LogInformation("Logger is working!");
    }

    private List<string> restaurants = new() { "Downtown Bistro", "Uptown Cafe", "Light Deli" };

    private string? editRestaurant = null;
    private string? editName = null;

    private void AddRestaurant()
    {
        Logger.LogInformation("adding..");
        restaurants.Add("New Restaurant");
        editRestaurant = "New Restaurant";
        editName = editRestaurant;
    }

    private void StartEdit(string restaurant)
    {
        Logger.LogInformation("editing..");
        editRestaurant = restaurant;
        editName = restaurant;
        StateHasChanged();
    }

    private void SaveEdit()
    {
        if (editRestaurant != null && editName != null)
        {
            var index = restaurants.IndexOf(editRestaurant);
            if (index >= 0)
            {
                restaurants[index] = editName;
            }
            editRestaurant = null;
            editName = null;
        }
    }

    private void CancelEdit()
    {
        editRestaurant = null;
        editName = null;
    }

    private void DeleteRestaurant(string restaurant)
    {
        Logger.LogInformation("editing..");

        restaurants.Remove(restaurant);
        StateHasChanged();
    }
}
