<div class="card shadow-lg border-0 rounded-3 mb-3 task-card" @onclick="()=>{}" style="cursor:pointer;">
    <div class="card-body d-flex flex-column justify-content-between">
        <div>
            <h5 class="card-title fw-semibold mb-1">@TaskName</h5>
            <p class="card-text text-muted mb-0">
                <i class="bi bi-fire"></i> @Station
            </p>
            <p class="card-text text-secondary small">
                <i class="bi bi-clock"></i> @Time
            </p>
        </div>

        <div class="d-flex align-items-center justify-content-between mt-3">
            <span class="@StatusBadgeClass">@Status</span>
            <div class="btn-group gap-1">
                <button class="btn btn-sm btn-success" @onclick="MarkComplete">âœ… Done</button>
                <button class="btn btn-sm btn-danger" @onclick="DeleteTask">ğŸ—‘ï¸</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string TaskName { get; set; } = "";
    [Parameter] public string Station { get; set; } = "";
    [Parameter] public string Time { get; set; } = "";
    [Parameter] public string Status { get; set; } = "Pending";

    [Parameter] public EventCallback OnDelete { get; set; }
    [Parameter] public EventCallback OnComplete { get; set; }

    private async Task DeleteTask() => await OnDelete.InvokeAsync();
    private async Task MarkComplete() => await OnComplete.InvokeAsync();

    private string StatusBadgeClass => Status switch
    {
        "Pending" => "badge bg-warning text-dark",
        "In Progress" => "badge bg-primary",
        "Completed" => "badge bg-success",
        _ => "badge bg-secondary"
    };
}

