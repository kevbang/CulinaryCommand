@inject CulinaryCommand.Services.AuthService Auth
@inject NavigationManager NavigationManager

@inherits LayoutComponentBase
@using CulinaryCommand.Models
@using CulinaryCommand.Services
@inject ManagerSessionManager SessionManager

<div class="page">
    <!-- Sidebar -->
    <div class="sidebar">
        <NavMenu />
    </div>

    <!-- Main Page containing the top row and main content-->
    <main>
        <div class="top-row px-4 d-flex justify-content-end align-items-center">

            <!-- Business Dropdown -->
            <div class="dropdown me-3">
                <button class="btn btn-light dropdown-toggle d-flex align-items-center py-2 pe-3" type="button"
                    id="businessMenu" data-bs-toggle="dropdown" aria-expanded="false" style="height:3rem;"
                    title="View and edit restaurants">

                    <div class="icon-box d-flex align-items-center justify-content-center me-2"
                        style="background-color:#d3ddd5; width:2.5rem; height:2.5rem; border-radius:0.45rem;">
                        <i class="bi bi-building fs-4" style="color:#688f72;"></i>
                    </div>
                    <span>Downtown Bistro</span>
                </button>

                <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="businessMenu">
                    <li>
                        <h6 class="dropdown-header">Restaurants</h6>
                    </li>

                    @foreach (var restaurant in restaurants)
                    {
                        <li>
                            <div
                                class="dropdown-item d-flex justify-content-between align-items-center @(currentRestaurant == restaurant ? "active" : "")">
                                <span class="flex-grow-1" style="cursor: pointer;"
                                    @onclick="() => ChangeRestaurant(restaurant)">
                                    @restaurant.Name
                                </span>
                                <button class="btn btn-link p-0 ms-2 edit-btn" title="Edit @restaurant.Name"
                                    @onclick="() => EditRestaurant(restaurant)" @onclick:stopPropagation="true">
                                    <i class="bi bi-pencil-fill fs-9 text-muted"></i>
                                </button>
                            </div>
                        </li>
                    }
                </ul>
            </div>


            <!-- Profile Dropdown -->
            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle d-flex align-items-center py-2 px-3" type="button"
                    id="profileMenu" data-bs-toggle="dropdown" aria-expanded="false" style="height:3rem;"
                    title="Profile">

                    <img src="images/profile.jpg" alt="Profile" class="rounded-circle me-2"
                        style="width:2.5rem; height:2.5rem;" />

                    @if (Auth.IsSignedIn)
                    {
                        @Auth.CurrentUser
                    }
                    else
                    {
                        <span>Guest</span>
                    }
                </button>

                <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="profileMenu">
                    <li><a class="dropdown-item" href="/profile">View Profile</a></li>
                    <li><a class="dropdown-item" href="/settings">Settings</a></li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a class="dropdown-item" href="#" @onclick="Logout">Logout</a></li>
                </ul>
            </div>
        </div>


    <article class="content px-4">
      @Body
    </article>
  </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {

    private List<RestaurantModel> restaurants => SessionManager.Restaurants ?? new List<RestaurantModel>();
    
    private RestaurantModel? currentRestaurant;

    protected override async Task OnInitializedAsync()
    {
        Auth.OnAuthStateChanged += RefreshLayout;
        await Auth.EnsureInitializedAsync();

        if (restaurants.Any()) {
            currentRestaurant = restaurants.First();
        }
    }

    private void RefreshLayout() => InvokeAsync(StateHasChanged);

    public void Dispose()
    {
        Auth.OnAuthStateChanged -= RefreshLayout;
    }

    private async Task Logout()
    {
        await Auth.LogoutAsync();
        NavigationManager.NavigateTo("/signin", true);
    }

    private void EditRestaurant(RestaurantModel restaurant)
    {
        Console.WriteLine($"Editing {restaurant.Name}");
        NavigationManager.NavigateTo($"/settings/restaurants?restaurant={restaurant.Id}", forceLoad: false);
    }

    private void ChangeRestaurant(RestaurantModel restaurant)
    {
        Console.WriteLine($"Editing restaurant {restaurant.Name}");
        currentRestaurant = restaurant;
        NavigationManager.NavigateTo($"/dashboard", forceLoad: false);
    }
}
