@code {
    @* private List<string> Locations = new(); *@
    private List<Location> ManagedLocations { get; set; } = new();

    private bool _hydrated = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // load user from localStorage
            await Auth.InitializeFromJsAsync();
            if (!Auth.UserId.HasValue) return;

            if (!_hydrated)
            {
                // Load from localStorage
                var locationsJson = await JS.InvokeAsync<string>("localStorage.getItem", "cc_locations");
                
                if (!string.IsNullOrWhiteSpace(locationsJson))
                {
                    try
                    {
                        ManagedLocations = JsonSerializer.Deserialize<List<Location>>(locationsJson) 
                                    ?? new List<Location>();
                    }
                    catch
                    {
                        // fallback if bad JSON
                        ManagedLocations = new List<Location>();
                    }
                }
                else
                {
                    ManagedLocations = new List<Location>();
                }

                LocationState.SetCurrentLocation(ManagedLocations.FirstOrDefault());

                // Subscribe to AuthService changes
                Auth.OnAuthStateChanged += Refresh;

                _hydrated = true;
                StateHasChanged();
            }

            StateHasChanged();
        }
    }

    private void Refresh() => InvokeAsync(StateHasChanged);


    private void EditRestaurant(Location restaurant)
    {
        Console.WriteLine($"Editing {restaurant.Name}");
        NavigationManager.NavigateTo($"/settings/locations/{restaurant.Id}", forceLoad: false);
    }

