@using CulinaryCommand.Data.Entities
@inject AuthService Auth
@inject ILocationService LocationService
@inject NavigationManager NavigationManager
@inherits ComponentBase

<h4>Your Managed Locations</h4>

@foreach (var loc in Locations)
{
    <div class="card shadow-sm p-3 mb-3">

        <div class="d-flex justify-content-between">
            <div>
                <h5>@loc.Name</h5>
                <p class="text-muted mb-1">@loc.Address</p>
                <small>@loc.City, @loc.State @loc.ZipCode</small>
            </div>

            <div>
                <button class="btn btn-outline-primary btn-sm" 
                        @onclick="() => Edit(loc)">
                    Edit
                </button>
            </div>
        </div>

        @if (editingId == loc.Id)
        {
            <div class="mt-3">
                <LocationForm Model="editModel" OnSave="HandleUpdate" OnCancel="CancelEdit" />
            </div>
        }
    </div>
}
@if (Locations.Count == 0) 
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="alert alert-info">
            You donâ€™t manage any locations yet.
        </div>
        <div class="mx-3">
            <button class="btn btn-secondary btn-sm" @onclick="() => AddLocation()">
                <i class="bi bi-square-plus me-1"></i>Add location
            </button>
        </div>
    </div>
}

@if (addingNew)
{
    <LocationForm Model="newModel" OnSave="HandleAdd" OnCancel="CancelAdd" />
}



@code {
    [Parameter] public List<Location> Locations { get; set; } = new();
    [Parameter] public EventCallback<Location> OnEdit { get; set; }

    private int? editingId;
    private Location editModel = new();

    private void Edit(Location loc)
    {
        editingId = loc.Id;

        editModel = new Location
        {
            Id = loc.Id,
            Name = loc.Name,
            Address = loc.Address,
            City = loc.City,
            State = loc.State,
            ZipCode = loc.ZipCode,
            CompanyId = loc.CompanyId
        };
    }

    private void CancelEdit() => editingId = null;

    private async Task HandleUpdate(Location model)
    {
        await OnEdit.InvokeAsync(model);
        CancelEdit();
    }

    private bool addingNew;
    private Location newModel = new();

    private void AddLocation()
    {
        addingNew = true;
        newModel = new Location(); // empty model
    }

    private void CancelAdd() => addingNew = false;

    private async Task HandleAdd(Location model)
    {
        if (Auth.UserId != null)
        {
            if (!Auth.CompanyId.HasValue)
            {
                // handle no company ID
                throw new InvalidOperationException("Cannot create location: CompanyId is missing for the current user.");
            }

            Location newLocation = new Location
            {
                Name = model.Name,
                Address = model.Address,
                City = model.City,
                State = model.State,
                ZipCode = model.ZipCode,
                CompanyId = Auth.CompanyId.Value
            };

            await LocationService.CreateLocationAsync(newLocation, Auth.UserId.Value);
            NavigationManager.NavigateTo("/settings/locations");
        }
        addingNew = false;
    }

}