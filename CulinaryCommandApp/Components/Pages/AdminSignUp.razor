@code {
    private bool isSubmitting = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    private SignupRequest Signup { get; set; } = new();

    private string FirstName { get; set; } = string.Empty;
    private string LastName { get; set; } = string.Empty;

    protected override void OnInitialized()
    {
        Signup.Locations ??= new List<LocationSignup>();

        if (Signup.Locations.Count == 0)
            Signup.Locations.Add(new LocationSignup());
    }

    private void AddLocation()
    {
        Signup.Locations.Add(new LocationSignup());
    }

    private void RemoveLocation(LocationSignup loc)
    {
        if (Signup.Locations.Count <= 1) return;
        Signup.Locations.Remove(loc);
    }

    private async Task HandleSubmit()
    {
        errorMessage = "";
        successMessage = "";
        isSubmitting = true;

        try
        {
            Signup.Admin.Name = $"{FirstName} {LastName}".Trim();

            await UserService.CreateAdminWithCompanyAndLocationAsync(Signup);

            successMessage = "Company created. Redirecting to sign in...";
            Navigation.NavigateTo("/signin", true);
        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }
}
