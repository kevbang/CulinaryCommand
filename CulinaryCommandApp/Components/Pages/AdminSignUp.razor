@page "/adminsignup"
@using CulinaryCommand.Models
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@inject CulinaryCommand.Services.IUserService UserService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Admin Sign Up - Culinary Command</PageTitle>

<div class="cc-hero">
    <div class="cc-shell">

        <div class="cc-top">
            <div class="cc-mark">
                <i class="bi bi-person-badge"></i>
            </div>
            <div>
                <div class="cc-title">Create your company</div>
                <div class="cc-subtitle">Add your locations, create the admin account, then invite your team.</div>
            </div>
        </div>

        <div class="cc-formcard">

            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger" role="alert">@errorMessage</div>
            }

            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success" role="alert">@successMessage</div>
            }

            <EditForm Model="@Signup" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="cc-section">
                    <div class="cc-section-head">
                        <div class="cc-section-title">Company</div>
                        <div class="cc-section-note">This is the organization that owns the locations.</div>
                    </div>

                    <div class="cc-grid2">
                        <div>
                            <label class="form-label">Company Name</label>
                            <InputText class="form-control cc-input" @bind-Value="Signup.Company.Name" />
                        </div>

                        <div>
                            <label class="form-label">Company Email (optional)</label>
                            <InputText class="form-control cc-input" @bind-Value="Signup.Company.Email" />
                        </div>

                        <div class="cc-span2">
                            <label class="form-label">Company Phone (optional)</label>
                            <InputText class="form-control cc-input" @bind-Value="Signup.Company.Phone" />
                        </div>
                    </div>
                </div>

                <div class="cc-divider"></div>

                <div class="cc-section">
                    <div class="cc-section-row">
                        <div>
                            <div class="cc-section-title">Locations</div>
                            <div class="cc-section-note">Add one or more restaurant locations.</div>
                        </div>

                        <button type="button"
                                class="btn btn-outline-success cc-btn-sm"
                                @onclick="AddLocation"
                                disabled="@isSubmitting">
                            <i class="bi bi-plus-lg me-1"></i> Add Location
                        </button>
                    </div>

                    @foreach (var loc in Signup.Locations.ToList())
                    {
                        var locIndex = Signup.Locations.IndexOf(loc);

                        <div class="cc-loc-card" @key="loc">
                            <div class="cc-loc-head">
                                <div class="cc-loc-title">Location @(locIndex + 1)</div>

                                <button type="button"
                                        class="btn btn-outline-danger cc-btn-sm"
                                        @onclick="() => RemoveLocation(loc)"
                                        disabled="@(isSubmitting || Signup.Locations.Count == 1)">
                                    Remove
                                </button>
                            </div>

                            <div class="cc-grid2">
                                <div class="cc-span2">
                                    <label class="form-label">Location Name</label>
                                    <InputText class="form-control cc-input" @bind-Value="loc.Name" />
                                </div>

                                <div class="cc-span2">
                                    <label class="form-label">Address</label>
                                    <InputText class="form-control cc-input" @bind-Value="loc.Address" />
                                </div>

                                <div>
                                    <label class="form-label">City</label>
                                    <InputText class="form-control cc-input" @bind-Value="loc.City" />
                                </div>

                                <div>
                                    <label class="form-label">State</label>
                                    <InputText class="form-control cc-input" @bind-Value="loc.State" />
                                </div>

                                <div class="cc-span2">
                                    <label class="form-label">Zip</label>
                                    <InputText class="form-control cc-input" @bind-Value="loc.ZipCode" />
                                </div>

                                <div class="cc-span2">
                                    <label class="form-label">MarginEdge Key (optional)</label>
                                    <InputText class="form-control cc-input" @bind-Value="loc.MarginEdgeKey" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="cc-divider"></div>

                <div class="cc-section">
                    <div class="cc-section-head">
                        <div class="cc-section-title">Admin Profile</div>
                        <div class="cc-section-note">This user owns the company and can invite others.</div>
                    </div>

                    <div class="cc-grid2">
                        <div>
                            <label class="form-label">First Name</label>
                            <InputText class="form-control cc-input" @bind-Value="FirstName" />
                        </div>

                        <div>
                            <label class="form-label">Last Name</label>
                            <InputText class="form-control cc-input" @bind-Value="LastName" />
                        </div>

                        <div class="cc-span2">
                            <label class="form-label">Admin Email</label>
                            <InputText type="email" class="form-control cc-input" @bind-Value="Signup.Admin.Email" />
                        </div>

                        <div class="cc-span2">
                            <label class="form-label">Admin Password</label>
                            <InputText type="password" class="form-control cc-input" @bind-Value="Signup.Admin.Password" />
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-success w-100 cc-btn mt-2" disabled="@isSubmitting">
                    @(isSubmitting ? "Creating..." : "Create Company")
                </button>

                <div class="cc-footlink">
                    <span class="text-muted">Already have an account?</span>
                    <a href="/signin" class="ms-2">Sign in</a>
                </div>

            </EditForm>
        </div>
    </div>
</div>

