@page "/signin"
@namespace CulinaryCommand.Components.Pages
@inject IUserService UserService
@inject ILocationService LocationService
@inject LocationState LocationState
@inject AuthService Auth
@inject NavigationManager Nav
@using CulinaryCommand.Data.Enums
@using CulinaryCommand.Data.Entities
@using Microsoft.AspNetCore.Components.Forms
@rendermode InteractiveServer


<PageTitle>Sign In - Culinary Command</PageTitle>

<div class="signin-container">
    <div class="signin-card">
        <div class="text-center mb-4">
            <h1 class="app-title">Culinary Command</h1>
            <p class="subtitle">Sign In To Your Account</p>
        </div>

        <EditForm Model="@signInModel" OnValidSubmit="@HandleSubmit" FormName="SignInForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

            <!-- Selecting your role (Manager or Cook) -->
            <!-- Radio only allows one selection at a time (manager or cook)-->
            <div class="role-selection mb-4">
                <div class="btn-group w-100" role="group">
                    <input type="radio" class="btn-check" name="role" id="manager" value="Manager" @onchange="@((e) => signInModel.Role = e.Value?.ToString())" checked="@(signInModel.Role == "Manager")">
                    <label class="btn btn-outline-success role-btn" for="manager">
                    <i class="fas fa-building me-2"></i>Manager
                    </label>

                    <input type="radio" class="btn-check" name="role" id="cook" value="Cook" @onchange="@((e) => signInModel.Role = e.Value?.ToString())" checked="@(signInModel.Role == "Cook")">
                    <label class="btn btn-outline-success role-btn" for="cook">
                    <i class="fas fa-building me-2"></i>Cook
                    </label>
                </div>
            </div>
            <!-- Email -->
            <div class="mb-3">
                <label for="username" class="form-label">Email</label>
                <InputText id="username" type="text" class="form-control" @bind-Value="signInModel.Email" placeholder="Enter your email" />
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="password-input-container">
                    <InputText id="password" type="@(showPassword ? "text" : "password")" class="form-control" @bind-Value="signInModel.Password" placeholder="Enter your password" />
                    <button type="button" class="password-toggle-btn" @onclick="TogglePasswordVisibility">
                        <i class="fas @(showPassword ? "fa-eye-slash" : "fa-eye")"></i>
                    </button>
                </div>
            </div>

            <!-- Remember Me and Forget Password buttons -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <InputCheckbox id="remember" class="form-check-input" @bind-Value="signInModel.RememberMe" />
                    <label class="form-check-label" for="remember">
                        Remember me
                    </label>
                </div>
                <a href="/forgot-password" class="forgot-password-link">Forgot your password?</a>
            </div>

            <!-- Sign In button -->
            <button type="submit" class="btn btn-success w-100 signin-btn">Sign in</button>
        </EditForm>

        <!-- Sign Up Link -->
        <div class="text-center mt-4">
            <span class="text-muted">Don't have an account? </span>
            <a href="/signup" class="signup-link">Sign up</a>
        </div>

        <!-- Admin Sign Up Link -->
        <div class="text-center mt-3">
            <span class="text-muted">Adding a new restaurant? </span>
            <a href="/adminsignup" class="signup-link">Create Restaurant</a>
        </div>
    </div>
</div>

@code {
    private SignInModel signInModel;
    private bool showPassword = false;

    protected override void OnInitialized()
    {
        if (signInModel == null)
        signInModel = new() { Role = Roles.Manager.ToString() }; // Default to manager
        if (Auth.IsSignedIn)
        {
            Nav.NavigateTo("/dashboard");
        }
    }

    private async Task HandleSubmit() 
    {
        Console.WriteLine($"Role: {signInModel.Role}");
        Console.WriteLine($"Email: {signInModel.Email}");
        Console.WriteLine($"Password: {signInModel.Password}");
        Console.WriteLine($"Remember Me: {signInModel.RememberMe}");
        User? user = await UserService.ValidateCredentialsAsync(signInModel.Email, signInModel.Password);
        if (user != null)
        {
            var userLocations = await LocationService.GetLocationsByManagerAsync(user.Id);
            LocationState.SetLocations(userLocations);
            await Auth.SignInAsync(user);
            await LocationService.LoadAndPersistLocationsAsync(user.Id);
            Nav.NavigateTo("/dashboard");
        }

        else
        {
            Console.WriteLine(value: $"NOT VALID");
        }

    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private class SignInModel 
    {
        public string Role { get; set; } 
        public string Email { get; set; }
        public string Password { get; set; }
        public bool RememberMe { get; set; } = false;
    }
}