@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <div class="top-row px-4 d-flex justify-content-end align-items-center">
                    <LocationSelector />
                    <ProfileDropdown />
                </div>

                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Authorized>

    <NotAuthorized>
        <main class="public-page">
            @Body
        </main>
    </NotAuthorized>
</AuthorizeView>
